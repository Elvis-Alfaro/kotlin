<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora.CalculadoraActivity">

    <TextView
        android:id="@+id/lblScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="right"
        android:text="123124"
        android:textSize="30sp"
        android:background="@android:drawable/edit_text"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btnZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintWidth_percent="10"
        app:layout_constraintTop_toBottomOf="@+id/lblScreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnOne"/>
    <Button
        android:id="@+id/btnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/lblScreen"
        app:layout_constraintLeft_toRightOf="@+id/btnZero"
        app:layout_constraintRight_toLeftOf="@+id/btnEqual"/>
    <Button
        android:id="@+id/btnEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        app:layout_constraintTop_toBottomOf="@+id/lblScreen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnOne"/>

</androidx.constraintlayout.widget.ConstraintLayout>